        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button2_background"
        android:text="RESET"
        android:textColor="#BEBEBE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button12"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="wprowadź stan górnej ściany"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <Button
        android:id="@+id/dol"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="#76FF03"
        app:layout_constraintEnd_toEndOf="@+id/c8"
        app:layout_constraintStart_toStartOf="@+id/c8"
        app:layout_constraintTop_toBottomOf="@+id/c8" />

    <Button
        android:id="@+id/prawo"
        android:layout_width="3dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="#E60A0A"
        app:layout_constraintBottom_toBottomOf="@+id/c6"
        app:layout_constraintStart_toEndOf="@+id/c6"
        app:layout_constraintTop_toTopOf="@+id/c6" />

    <Button
        android:id="@+id/lewo"
        android:layout_width="3dp"
        android:layout_height="100dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="#FF9100"
        app:layout_constraintBottom_toBottomOf="@+id/c4"
        app:layout_constraintEnd_toStartOf="@+id/c4"
        app:layout_constraintTop_toTopOf="@+id/c4" />

    <Button
        android:id="@+id/solve"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button2_background"
        android:text="SOLVE"
        android:textColor="#BEBEBE"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:textColor="#A4FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/solve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button11"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button2_background"
        android:text="WYSLIJ"
        android:textColor="#BEBEBE"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button12" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginBottom="5dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/c2"
        app:layout_constraintEnd_toEndOf="@+id/c2"
        app:layout_constraintStart_toStartOf="@+id/c2" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
